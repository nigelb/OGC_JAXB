<project xmlns="http://maven.apache.org/POM/4.0.0" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jvnet.ogc</groupId>
	<artifactId>sensorml-v_1_0_1-schema</artifactId>
	<packaging>jar</packaging>
	<name>OGC SensorML Schema 1.0.1</name>
	<parent>
		<groupId>org.jvnet.ogc</groupId>
		<artifactId>sensorml-v_1_0_1</artifactId>
		<version>1.0.0</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<dependencies>
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-impl</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jvnet.ogc</groupId>
			<artifactId>swecommon-v_1_0_1-schema</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>
	<build>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<configuration>
					<schemaIncludes>
						<value>sensorML/*/sensorML.xsd</value>
					</schemaIncludes>
					<episodes>
						<episode>
							<groupId>org.jvnet.ogc</groupId>
							<artifactId>swecommon-v_1_0_1-schema</artifactId>
							<version>1.0.0</version>
						</episode>
						<episode>
							<groupId>org.jvnet.ogc</groupId>
							<artifactId>gml-v_3_1_1-schema</artifactId>
							<version>1.0.0</version>
						</episode>
					</episodes>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
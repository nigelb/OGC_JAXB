<project xmlns="http://maven.apache.org/POM/4.0.0" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.jvnet.ogc</groupId>
	<artifactId>omx-v_1_0_0-schema</artifactId>
	<packaging>jar</packaging>
	<name>OGC OMX Schema 1.0.0</name>
	<parent>
		<groupId>org.jvnet.ogc</groupId>
		<artifactId>omx-v_1_0_0</artifactId>
		<version>1.0.0</version>
	</parent>
	<dependencies>
		<dependency>
			<groupId>com.sun.xml.bind</groupId>
			<artifactId>jaxb-impl</artifactId>
		</dependency>
		<dependency>
			<groupId>org.jvnet.ogc</groupId>
			<artifactId>om-v_1_0_0-schema</artifactId>
			<version>1.0.0</version>
		</dependency>
		<dependency>
			<groupId>org.jvnet.ogc</groupId>
			<artifactId>cv-v_0_2_1-schema</artifactId>
			<version>1.0.0</version>
		</dependency>
	</dependencies>
	<build>
		<defaultGoal>install</defaultGoal>
		<plugins>
			<plugin>
				<groupId>org.jvnet.jaxb2.maven2</groupId>
				<artifactId>maven-jaxb2-plugin</artifactId>
				<configuration>
					<schemaIncludes>
						<value>omx/*/om_extended.xsd</value>
					</schemaIncludes>
					<episodes>
						<episode>
							<groupId>org.jvnet.ogc</groupId>
							<artifactId>om-v_1_0_0-schema</artifactId>
							<version>1.0.0</version>
						</episode>
						<episode>
							<groupId>org.jvnet.ogc</groupId>
							<artifactId>swecommon-v_1_0_1-schema</artifactId>
							<version>1.0.0</version>
						</episode>
						<episode>
							<groupId>org.jvnet.ogc</groupId>
							<artifactId>gml-v_3_1_1-schema</artifactId>
							<version>1.0.0</version>
						</episode>
						<episode>
							<groupId>org.jvnet.ogc</groupId>
							<artifactId>sensorml-v_1_0_1-schema</artifactId>
							<version>1.0.0</version>
						</episode>
						<episode>
							<groupId>org.jvnet.ogc</groupId>
							<artifactId>cv-v_0_2_1-schema</artifactId>
							<version>1.0.0</version>
						</episode>
					</episodes>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<phase>process-sources</phase>
						<configuration>
							<tasks>
								<delete dir="${basedir}/target/generated-sources/xjc/us"/>
								<delete dir="${basedir}/target/generated-sources/xjc/net/opengis/sensorml"/>
								<delete dir="${basedir}/target/generated-sources/xjc/net/opengis/om"/>
								<delete dir="${basedir}/target/generated-sources/xjc/net/opengis/gml"/>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>